{
  "name": "revitedocs",
  "version": "0.0.4",
  "description": "A modern documentation generator powered by React and Vite with SSG support",
  "type": "module",
  "bin": {
    "revitedocs": "./bin/revitedocs.js"
  },
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./components/docs": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build",
    "release": "npm publish --access public",
    "release:dry": "npm publish --access public --dry-run"
  },
  "keywords": [
    "documentation",
    "static-site-generator",
    "react",
    "vite",
    "ssg",
    "docs"
  ],
  "author": "Brad Risse",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/rollup": "^3.1.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cac": "^6.7.14",
    "clsx": "^2.1.1",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.555.0",
    "mermaid": "^11.4.0",
    "minisearch": "^7.2.0",
    "picocolors": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-directive": "^3.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.17.0",
    "tailwind-merge": "^3.4.0",
    "unified": "^11.0.5",
    "vite": "^6.0.0",
    "zod": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  }
}
