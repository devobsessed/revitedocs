{
  "name": "revitedocs",
  "version": "0.0.8",
  "description": "A modern documentation generator powered by React and Vite with SSG support",
  "type": "module",
  "bin": {
    "revitedocs": "./bin/revitedocs.js"
  },
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./components/docs": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./theme/globals.css": "./src/theme/globals.css"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "src/theme/globals.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "release": "npm publish --access public",
    "release:dry": "npm publish --access public --dry-run"
  },
  "keywords": [
    "documentation",
    "static-site-generator",
    "react",
    "vite",
    "ssg",
    "docs"
  ],
  "author": "Brad Risse",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/rollup": "^3.1.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-visually-hidden": "^1.1.4",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cac": "^6.7.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "d3-sankey": "^0.12.3",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.555.0",
    "mermaid": "^11.4.0",
    "minisearch": "^7.2.0",
    "picocolors": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-directive": "^3.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.17.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "unified": "^11.0.5",
    "vite": "^6.0.0",
    "zod": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.0",
    "@rollup/rollup-linux-x64-musl": "^4.40.0"
  }
}
